{
  "manifest_version": 3,
  "name": "eBay Sold Listings Scraper",
  "version": "1.0",
  "description": "Scrape sold eBay listings and save to Google Sheets",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": [
    "https://www.ebay.com/*",
    "https://script.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ebay.com/*"],
      "js": ["content.js"]
    }
  ]
}
